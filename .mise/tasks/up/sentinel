#!/usr/bin/env bash
#MISE description="Start Sentinel proxy"

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
ROOT_DIR="$(cd "$SCRIPT_DIR/../../.." && pwd)"

echo "Starting Sentinel..."
podman compose -f "$ROOT_DIR/docker/docker-compose.yaml" --profile sentinel up -d

echo "Waiting for Sentinel to be ready..."
for i in {1..30}; do
    if curl -sf http://localhost:8080/ >/dev/null 2>&1; then
        echo "Sentinel is ready!"
        exit 0
    fi
    sleep 1
done

echo "Warning: Sentinel may not be fully ready"
