#!/usr/bin/env bash
#MISE description="Quick benchmark Sentinel (starts, benchmarks, stops)"
#MISE depends=["up:sentinel"]

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
ROOT_DIR="$(cd "$SCRIPT_DIR/../../.." && pwd)"

# Run quick benchmark
"$SCRIPT_DIR/../quick-main" "$@"

# Stop after benchmark
echo ""
echo "Stopping Sentinel..."
podman compose -f "$ROOT_DIR/docker/docker-compose.yaml" --profile sentinel down
