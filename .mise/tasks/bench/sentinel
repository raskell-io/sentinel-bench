#!/usr/bin/env bash
#MISE description="Benchmark Sentinel (starts, benchmarks, stops)"
#MISE depends=["up:sentinel"]

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
ROOT_DIR="$(cd "$SCRIPT_DIR/../../.." && pwd)"

SCENARIO="${1:-passthrough}"

# Run the main benchmark script
"$SCRIPT_DIR/../bench-main" sentinel "$SCENARIO" "${@:2}"

# Stop after benchmark
echo "Stopping Sentinel..."
podman compose -f "$ROOT_DIR/docker/docker-compose.yaml" --profile sentinel down
