#!/usr/bin/env bash
#MISE description="Benchmark Nginx (starts, benchmarks, stops)"
#MISE depends=["up:nginx"]

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
ROOT_DIR="$(cd "$SCRIPT_DIR/../../.." && pwd)"

SCENARIO="${1:-passthrough}"

# Run the main benchmark script
"$SCRIPT_DIR/../bench-main" nginx "$SCENARIO" "${@:2}"

# Stop after benchmark
echo "Stopping Nginx..."
docker compose -f "$ROOT_DIR/docker/docker-compose.yaml" --profile nginx down
